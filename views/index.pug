html
	head
		link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css')
		title BA - Index
	body
		if user
			nav.nav-extended
				.nav-wrapper.light-blue.darken-3
					a.brand-logo(href='/') Blog App
					a.button-collapse(href='/', data-activates='mobile-demo')
						i.material-icons menu
					ul#nav-mobile.right.hide-on-med-and-down
						li
							a(href='/profile') Profile
						li
							a(href='/logout') Logout
					
					ul#mobile-demo.side-nav
						li
							a(href='/profile') Profile
						li
							a(href='/logout') Logout
		else
			nav.nav-extended
				.nav-wrapper.light-blue.darken-3
					a.brand-logo(href='/') Blog App
					a.button-collapse(href='/', data-activates='mobile-demo')
						i.material-icons menu
					ul#nav-mobile.right.hide-on-med-and-down
						li
							a(href= "/register") Register
						li
							a(href= "/login") Login
						li
							a(href= "/profile") Profile

					ul#mobile-demo.side-nav
						li
							a(href= "/register") Register
						li
							a(href= "/login") login
						li
							a(href= "/profile") Profile
	.container
		.row
			.col.s6.offset-s6
			h3 Welcome  
		if user
			h3 Welcome #{user.name}
		else
			p Login or register 
		p #{message}
		
		script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js')
		script
			include custom.js		
